<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.SHP.AddRespondenSHPFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/brown_light"
            android:padding="20dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvFormTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form Informasi Perusahaan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/brown_dark"
                android:paddingBottom="16dp" />

            <EditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Perusahaan"
                android:background="@drawable/background_edittext"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etCompanyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alamat Perusahaan"
                android:background="@drawable/background_edittext"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brown_dark"
                android:paddingBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerKabKota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext"
                android:layout_marginBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerKecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext"
                android:layout_marginBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerKelDesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. Telepon"
                android:inputType="phone"
                android:background="@drawable/background_edittext"
                android:padding="12dp"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batal"
                    android:textColor="@color/brown_dark"
                    android:background="@drawable/background_button_outline"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:textColor="@color/brown_dark"
                    android:background="@drawable/background_button_primary"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>